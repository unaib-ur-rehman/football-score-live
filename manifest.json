{
    "manifest_version": 3,
    "name": "Football Scores",
    "version": "1.0",
    "description": "Displays current football scores.",
    "icons": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icons/icon.png"
    },
    "permissions": ["activeTab", "storage"]
  }
  